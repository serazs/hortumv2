-- Make GUI draggable
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    Border.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Border.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = Border.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

Border.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

--------------------------------------------------
-- RING PARTS LOGIC (GÜNCELLENMİŞ)
--------------------------------------------------
local radius = 50
local height = 100
local rotationSpeed = 1
local attractionStrength = 1000
local ringPartsEnabled = false
local currentMode = "tornado"  -- "tornado" veya "heart"
local heartOrientation = "horizontal"  -- "horizontal" (yatay) veya "vertical" (dikey)

local partAngles = {}  -- heart modunda kullanılacak açılar

local function RetainPart(Part)
    if Part:IsA("BasePart") and not Part.Anchored and Part:IsDescendantOf(Workspace) then
        if Part.Parent == LocalPlayer.Character or Part:IsDescendantOf(LocalPlayer.Character) then
            return false
        end
        Part.CustomPhysicalProperties = PhysicalProperties.new(0, 0, 0, 0, 0)
        Part.CanCollide = false
        return true
    end
    return false
end

local parts = {}
local function addPart(part)
    if RetainPart(part) then
        if not table.find(parts, part) then
            table.insert(parts, part)
            partAngles[part] = math.random() * 2 * math.pi
        end
    end
end

local function removePart(part)
    local index = table.find(parts, part)
    if index then
        table.remove(parts, index)
        partAngles[part] = nil
    end
end

for _, part in pairs(Workspace:GetDescendants()) do
    addPart(part)
end

Workspace.DescendantAdded:Connect(addPart)
Workspace.DescendantRemoving:Connect(removePart)

-- Tornado güncellemesi
local function tornadoUpdate()
    local humanoidRootPart = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if humanoidRootPart then
        local tornadoCenter = humanoidRootPart.Position
        for _, part in pairs(parts) do
            if part.Parent and not part.Anchored then
                local pos = part.Position
                local distance = (Vector3.new(pos.X, tornadoCenter.Y, pos.Z) - tornadoCenter).Magnitude
                local angle = math.atan2(pos.Z - tornadoCenter.Z, pos.X - tornadoCenter.X)
                local newAngle = angle + math.rad(rotationSpeed)
                local targetPos = Vector3.new(
                    tornadoCenter.X + math.cos(newAngle) * math.min(radius, distance),
                    tornadoCenter.Y + (height * (math.abs(math.sin((pos.Y - tornadoCenter.Y) / height)))),
                    tornadoCenter.Z + math.sin(newAngle) * math.min(radius, distance)
                )
                local directionToTarget = (targetPos - part.Position).unit
                part.Velocity = directionToTarget * attractionStrength
            end
        end
    end
end

-- Kalp güncellemesi (yatay/dikey seçenekli)
local function heartUpdate()
    local humanoidRootPart = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return end
    local center = humanoidRootPart.Position
    local speed = 0.03
    
    for _, part in pairs(parts) do
        if part.Parent and not part.Anchored then
            local t = partAngles[part] or 0
            t = t + speed
            if t > 2 * math.pi then t = t - 2 * math.pi end
            partAngles[part] = t
            
            local scale = radius * 0.5
            -- Kalp parametrik denklemi (standart)
            local u = 16 * math.sin(t)^3
            local v = (13 * math.cos(t) - 5 * math.cos(2*t) - 2 * math.cos(3*t) - math.cos(4*t))
            
            local targetPos
            if heartOrientation == "horizontal" then
                -- Yatay: XZ düzleminde kalp, Y sabit (oyuncu Y'si)
                targetPos = center + Vector3.new(scale * u, 0, scale * v)
            else
                -- Dikey: XY düzleminde kalp, Z sabit (oyuncu Z'si)
                targetPos = center + Vector3.new(scale * u, scale * v, 0)
            end
            
            local direction = (targetPos - part.Position).unit
            part.Velocity = direction * attractionStrength
        end
    end
end

-- Heartbeat
RunService.Heartbeat:Connect(function()
    if not ringPartsEnabled then return end
    if currentMode == "tornado" then
        tornadoUpdate()
    elseif currentMode == "heart" then
        heartUpdate()
    end
end)

-- GUI buton işlevleri
ToggleButton.MouseButton1Click:Connect(function()
    ringPartsEnabled = not ringPartsEnabled
    ToggleButton.Text = ringPartsEnabled and "Ring Parts On" or "Ring Parts Off"
    ToggleButton.BackgroundColor3 = ringPartsEnabled and Color3.fromRGB(50, 205, 50) or Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

DecreaseRadius.MouseButton1Click:Connect(function()
    radius = math.max(1, radius - 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

IncreaseRadius.MouseButton1Click:Connect(function()
    radius = math.min(1000, radius + 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

-- Mod butonları
TornadoBtn.MouseButton1Click:Connect(function()
    currentMode = "tornado"
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    HeartBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    -- Orientation butonunu Tornado'da gizleyelim (isteğe bağlı, ama gösterebiliriz de)
    -- OrientationBtn.Visible = false  (istersen gizle, ama kalabilir)
    playSound("12221967")
end)

HeartBtn.MouseButton1Click:Connect(function()
    currentMode = "heart"
    HeartBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    -- OrientationBtn.Visible = true
    playSound("12221967")
end)

-- Orientation butonu (Yatay/Dikey)
OrientationBtn.MouseButton1Click:Connect(function()
    if heartOrientation == "horizontal" then
        heartOrientation = "vertical"
        OrientationBtn.Text = "V"
        OrientationBtn.BackgroundColor3 = Color3.fromRGB(255, 165, 0)  -- turuncu (dikey)
    else
        heartOrientation = "horizontal"
        OrientationBtn.Text = "H"
        OrientationBtn.BackgroundColor3 = Color3.fromRGB(50, 205, 50)  -- yeşil
    end
    playSound("12221967")
end)

-- Başlangıçta orientation butonunun rengini ayarla (yeşil)
OrientationBtn.Text = "H"
OrientationBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)

--------------------------------------------------
-- BİLDİRİM VE CHAT
--------------------------------------------------
local function getThumbnail()
    local success, userId = pcall(function()
        return Players:GetUserIdFromNameAsync("31")
    end)
    
    if success then
        local content, isReady = Players:GetUserThumbnailAsync(userId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
        return content
    end
    return ""
end

StarterGui:SetCore("SendNotification", {
    Title = "Super ring parts V4",
    Text = "enjoy",
    Icon = getThumbnail(),
    Duration = 5
})

local function SendChatMessage(message)
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        local textChannel = TextChatService.TextChannels.RBXGeneral
        if textChannel then
            textChannel:SendAsync(message)
        end
    else
        local success = pcall(function()
            game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer(message, "All")
        end)
    end
end

SendChatMessage("")
