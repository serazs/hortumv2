-- Dragging
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    Border.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Border.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = Border.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

Border.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

--------------------------------------------------
-- CORE LOGIC
--------------------------------------------------
local radius = 50
local rotationSpeed = 1
local attractionStrength = 2000  -- daha güçlü çekim
local ringPartsEnabled = false
local currentMode = "tornado"  -- "tornado" veya "heart"
local currentPlane = "horizontal"  -- "horizontal" veya "vertical"

-- Her parça için açı takibi
local partAngles = {}

local function RetainPart(Part)
    if Part:IsA("BasePart") and not Part.Anchored and Part:IsDescendantOf(Workspace) then
        if Part.Parent == LocalPlayer.Character or Part:IsDescendantOf(LocalPlayer.Character) then
            return false
        end
        Part.CustomPhysicalProperties = PhysicalProperties.new(0, 0, 0, 0, 0)
        Part.CanCollide = false
        return true
    end
    return false
end

local parts = {}
local function addPart(part)
    if RetainPart(part) then
        if not table.find(parts, part) then
            table.insert(parts, part)
            partAngles[part] = math.random() * 2 * math.pi
        end
    end
end

local function removePart(part)
    local index = table.find(parts, part)
    if index then
        table.remove(parts, index)
        partAngles[part] = nil
    end
end

for _, part in pairs(Workspace:GetDescendants()) do
    addPart(part)
end

Workspace.DescendantAdded:Connect(addPart)
Workspace.DescendantRemoving:Connect(removePart)

-- Tornado yatay
local function tornadoHorizontal(center, part, angle)
    local r = radius  -- sabit yarıçap
    local x = center.X + math.cos(angle) * r
    local z = center.Z + math.sin(angle) * r
    local y = center.Y  -- sabit yükseklik
    return Vector3.new(x, y, z)
end

-- Tornado dikey (X-Y düzleminde daire)
local function tornadoVertical(center, part, angle)
    local r = radius
    local x = center.X + math.cos(angle) * r
    local y = center.Y + math.sin(angle) * r
    local z = center.Z  -- sabit Z
    return Vector3.new(x, y, z)
end

-- Kalp yatay (X-Z düzleminde)
local function heartHorizontal(center, part, angle)
    local scale = radius * 0.5
    local x = scale * 16 * math.sin(angle)^3
    local z = scale * (13 * math.cos(angle) - 5 * math.cos(2*angle) - 2 * math.cos(3*angle) - math.cos(4*angle))
    local y = 0
    return center + Vector3.new(x, y, z)
end

-- Kalp dikey (X-Y düzleminde, yatayda Z sabit)
local function heartVertical(center, part, angle)
    local scale = radius * 0.5
    -- Kalp denklemini X-Y'ye uyarla: X yatay, Y dikey, Z sabit
    local x = scale * 16 * math.sin(angle)^3
    local y = scale * (13 * math.cos(angle) - 5 * math.cos(2*angle) - 2 * math.cos(3*angle) - math.cos(4*angle))
    local z = 0
    return center + Vector3.new(x, y, z)
end

-- Ana güncelleme
RunService.Heartbeat:Connect(function()
    if not ringPartsEnabled then return end
    
    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local center = hrp.Position
    
    for _, part in pairs(parts) do
        if part.Parent and not part.Anchored then
            local angle = partAngles[part] or 0
            angle = angle + math.rad(rotationSpeed)
            if angle > 2 * math.pi then angle = angle - 2 * math.pi end
            partAngles[part] = angle
            
            local targetPos
            if currentMode == "tornado" then
                if currentPlane == "horizontal" then
                    targetPos = tornadoHorizontal(center, part, angle)
                else
                    targetPos = tornadoVertical(center, part, angle)
                end
            else -- heart
                if currentPlane == "horizontal" then
                    targetPos = heartHorizontal(center, part, angle)
                else
                    targetPos = heartVertical(center, part, angle)
                end
            end
            
            local direction = (targetPos - part.Position).unit
            part.Velocity = direction * attractionStrength
        end
    end
end)

-- Buton işlevleri
ToggleButton.MouseButton1Click:Connect(function()
    ringPartsEnabled = not ringPartsEnabled
    ToggleButton.Text = ringPartsEnabled and "Ring Parts On" or "Ring Parts Off"
    ToggleButton.BackgroundColor3 = ringPartsEnabled and Color3.fromRGB(50, 205, 50) or Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

DecreaseRadius.MouseButton1Click:Connect(function()
    radius = math.max(1, radius - 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

IncreaseRadius.MouseButton1Click:Connect(function()
    radius = math.min(1000, radius + 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

TornadoBtn.MouseButton1Click:Connect(function()
    currentMode = "tornado"
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    HeartBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

HeartBtn.MouseButton1Click:Connect(function()
    currentMode = "heart"
    HeartBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

HorizontalBtn.MouseButton1Click:Connect(function()
    currentPlane = "horizontal"
    HorizontalBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    VerticalBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

VerticalBtn.MouseButton1Click:Connect(function()
    currentPlane = "vertical"
    VerticalBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    HorizontalBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

--------------------------------------------------
-- BİLDİRİM VE CHAT
--------------------------------------------------
local function getThumbnail()
    local success, userId = pcall(function()
        return Players:GetUserIdFromNameAsync("31")
    end)
    
    if success then
        local content, isReady = Players:GetUserThumbnailAsync(userId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
        return content
    end
    return ""
end

StarterGui:SetCore("SendNotification", {
    Title = "Super ring parts V4",
    Text = "enjoy",
    Icon = getThumbnail(),
    Duration = 5
})

local function SendChatMessage(message)
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        local textChannel = TextChatService.TextChannels.RBXGeneral
        if textChannel then
            textChannel:SendAsync(message)
        end
    else
        local success = pcall(function()
            game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer(message, "All")
        end)
    end
end

SendChatMessage("mert femboy")
