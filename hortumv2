-- Dragging
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    Border.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Border.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = Border.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)

Border.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then update(input) end
end)

--------------------------------------------------
-- RING PARTS LOGIC (GÜÇLENDİRİLMİŞ MOTOR)
--------------------------------------------------
local radius = 50
local height = 100          -- dikey salınım genliği
local rotationSpeed = 2      -- biraz hızlandı
local attractionStrength = 5000  -- ÇOK GÜÇLÜ ÇEKİM!
local ringPartsEnabled = false
local currentMode = "tornado"
local tornadoVertical = false
local heartVertical = false

-- Global zaman sayacı (tüm parçalar aynı anda hareket etsin)
local globalTime = 0

local partAngles = {}  -- her part için açı (sadece heart modunda kullanılır)

local function RetainPart(Part)
    if Part:IsA("BasePart") and not Part.Anchored and Part:IsDescendantOf(Workspace) then
        if Part.Parent == LocalPlayer.Character or Part:IsDescendantOf(LocalPlayer.Character) then
            return false
        end
        Part.CustomPhysicalProperties = PhysicalProperties.new(0, 0, 0, 0, 0)
        Part.CanCollide = false
        return true
    end
    return false
end

local parts = {}
local function addPart(part)
    if RetainPart(part) then
        if not table.find(parts, part) then
            table.insert(parts, part)
            partAngles[part] = math.random() * 2 * math.pi
        end
    end
end

local function removePart(part)
    local index = table.find(parts, part)
    if index then
        table.remove(parts, index)
        partAngles[part] = nil
    end
end

for _, part in pairs(Workspace:GetDescendants()) do
    addPart(part)
end

Workspace.DescendantAdded:Connect(addPart)
Workspace.DescendantRemoving:Connect(removePart)

-- Tornado motoru
local function tornadoUpdate(vertical)
    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local center = hrp.Position
    local verticalOffset = 0
    if vertical then
        -- Global zaman ile sinüs: tüm parçalar aynı fazda yukarı aşağı
        verticalOffset = math.sin(globalTime * 5) * height * 0.5
    end
    for _, part in pairs(parts) do
        if part.Parent and not part.Anchored then
            local pos = part.Position
            local dist = (Vector3.new(pos.X, center.Y, pos.Z) - center).Magnitude
            local angle = math.atan2(pos.Z - center.Z, pos.X - center.X)
            local newAngle = angle + math.rad(rotationSpeed)
            local targetX = center.X + math.cos(newAngle) * math.min(radius, dist)
            local targetZ = center.Z + math.sin(newAngle) * math.min(radius, dist)
            local targetY = center.Y + verticalOffset  -- dikey ofset ekle
            local targetPos = Vector3.new(targetX, targetY, targetZ)
            part.Velocity = (targetPos - part.Position) * attractionStrength
        end
    end
end

-- Kalp motoru
local function heartUpdate(vertical)
    local hrp = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    local center = hrp.Position
    local speed = 0.05  -- kalp dönüş hızı
    local verticalOffset = 0
    if vertical then
        verticalOffset = math.sin(globalTime * 5) * height * 0.5
    end
    for _, part in pairs(parts) do
        if part.Parent and not part.Anchored then
            local t = partAngles[part] or 0
            t = t + speed
            if t > 2 * math.pi then t = t - 2 * math.pi end
            partAngles[part] = t
            
            local scale = radius * 0.5
            local x = scale * 16 * math.sin(t)^3
            local z = scale * (13 * math.cos(t) - 5 * math.cos(2*t) - 2 * math.cos(3*t) - math.cos(4*t))
            local targetPos = center + Vector3.new(x, verticalOffset, z)  -- dikey ofset burada
            part.Velocity = (targetPos - part.Position) * attractionStrength
        end
    end
end

-- Heartbeat: zamanı güncelle ve moda göre çağır
RunService.Heartbeat:Connect(function(dt)
    globalTime = globalTime + dt  -- zamanı ilerlet
    if not ringPartsEnabled then return end
    if currentMode == "tornado" then
        tornadoUpdate(tornadoVertical)
    elseif currentMode == "heart" then
        heartUpdate(heartVertical)
    end
end)

-- GUI buton işlevleri
ToggleButton.MouseButton1Click:Connect(function()
    ringPartsEnabled = not ringPartsEnabled
    ToggleButton.Text = ringPartsEnabled and "Ring Parts On" or "Ring Parts Off"
    ToggleButton.BackgroundColor3 = ringPartsEnabled and Color3.fromRGB(50, 205, 50) or Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

DecreaseRadius.MouseButton1Click:Connect(function()
    radius = math.max(1, radius - 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

IncreaseRadius.MouseButton1Click:Connect(function()
    radius = math.min(1000, radius + 2)
    RadiusDisplay.Text = "Radius: " .. radius
    playSound("12221967")
end)

TornadoBtn.MouseButton1Click:Connect(function()
    currentMode = "tornado"
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    HeartBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    TornadoVerticalBtn.BackgroundColor3 = tornadoVertical and Color3.fromRGB(50,205,50) or Color3.fromRGB(30,30,30)
    HeartVerticalBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

HeartBtn.MouseButton1Click:Connect(function()
    currentMode = "heart"
    HeartBtn.BackgroundColor3 = Color3.fromRGB(50,205,50)
    TornadoBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    HeartVerticalBtn.BackgroundColor3 = heartVertical and Color3.fromRGB(50,205,50) or Color3.fromRGB(30,30,30)
    TornadoVerticalBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    playSound("12221967")
end)

TornadoVerticalBtn.MouseButton1Click:Connect(function()
    if currentMode == "tornado" then
        tornadoVertical = not tornadoVertical
        TornadoVerticalBtn.BackgroundColor3 = tornadoVertical and Color3.fromRGB(50,205,50) or Color3.fromRGB(30,30,30)
        playSound("12221967")
    else
        playSound("12221967")
    end
end)

HeartVerticalBtn.MouseButton1Click:Connect(function()
    if currentMode == "heart" then
        heartVertical = not heartVertical
        HeartVerticalBtn.BackgroundColor3 = heartVertical and Color3.fromRGB(50,205,50) or Color3.fromRGB(30,30,30)
        playSound("12221967")
    else
        playSound("12221967")
    end
end)

--------------------------------------------------
-- BİLDİRİM VE CHAT
--------------------------------------------------
local function getThumbnail()
    local success, userId = pcall(function() return Players:GetUserIdFromNameAsync("31") end)
    if success then
        local content = Players:GetUserThumbnailAsync(userId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
        return content
    end
    return ""
end

StarterGui:SetCore("SendNotification", {
    Title = "Super ring parts V4",
    Text = "enjoy",
    Icon = getThumbnail(),
    Duration = 5
})

local function SendChatMessage(message)
    if TextChatService.ChatVersion == Enum.ChatVersion.TextChatService then
        local textChannel = TextChatService.TextChannels.RBXGeneral
        if textChannel then textChannel:SendAsync(message) end
    else
        pcall(function()
            game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents"):FindFirstChild("SayMessageRequest"):FireServer(message, "All")
        end)
    end
end

SendChatMessage("")
